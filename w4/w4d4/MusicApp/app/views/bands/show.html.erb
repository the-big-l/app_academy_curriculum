<p id="notice"><%= notice %></p>
<%= link_to 'Add Album', new_band_album_url(@band) %> |
<%= link_to 'Back to Artists', bands_path %>

<p>
  <strong>Artist:</strong>
  <%= @band.name %>
</p>

<p>
  <table>
    <thead>
      <tr>
        <th>Albums</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @band.albums.order(:title).each do |album| %>
        <tr>
          <td><%= album.title %></td>
          <td><%= link_to 'Show', album %></td>
          <td><%= link_to 'Edit', edit_album_path(album) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
