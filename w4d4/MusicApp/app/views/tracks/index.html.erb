<p id="notice"><%= notice %></p>

<h1>Listing Tracks</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Album</th>
      <th>No.</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks
          .joins(:album)
          .joins(:band)
          .order('bands.name')
          .order('albums.title')
          .order(:no)
          .each do |track| %>
      <tr>
        <td><%= track.band_name %></td>
        <td><%= track.album_title %></td>
        <td><%= track.no %></td>
        <td><%= track.title %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
