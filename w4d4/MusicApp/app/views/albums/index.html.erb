<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th>Recording Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.joins(:band).order('bands.name').order(:title).each do |album| %>
      <tr>
        <td><%= album.band_name %></td>
        <td><%= album.title %></td>
        <td><%= album.recording_type %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

